---
import { getLangFromUrl } from "src/i18n/utils";
interface Props {
  title: string;
}
const lang = getLangFromUrl(Astro.url);
const { title } = Astro.props;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/LogoMobile.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <script>
      import onRequest from "src/api/middleware";

      onRequest(window.location.href, window.location.pathname).then(
        (location) => {
          if (location) {
            // avoid redirecting to the same page
            window.location.href = location;
          } else {
            (document.querySelector(".loading") as HTMLElement).style.display =
              "none";
            const screen = document.getElementById("screen")!;
            screen.style.display = "none";
          }
        }
      );
    </script>
  </head>
  <body>
    <div class="loading loading-ring loading-lg"></div>
    <div id="screen"></div>
    <!-- Screen overlay -->
    <slot />
  </body>
</html>

<style>
  .loading {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 1000;
    width: 100px;
    height: 100px;
    color: var(--text-color);
  }
  #screen {
    background-color: var(--bg-color);
    height: 100vh;
    width: 100vw;
    z-index: 100;
  }
</style>

<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }

  html {
    font-family: system-ui, sans-serif;
    --bg-color: #f0f6fc;
    --text-color: #13151a;
    background: var(--bg-color);
    height: 100%;
    margin: 0;
  }
  body {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }
  /* SCROLLLLLLLLLLLLLLLLLLLLLLLLLLLLLLLLLLLLLLLLLLLLLLBARRRRRRRRRRRRRRRRRRRRRRRRRRRRRRRRRRRRRRR */
  body::-webkit-scrollbar {
    display: none;
  }
  .dark {
    --bg-color: #0d1117;
    --text-color: #f0f6fc;
  }

  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }
</style>
