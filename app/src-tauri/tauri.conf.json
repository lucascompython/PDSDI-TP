{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "clothe_match",
  "version": "0.1.0",
  "identifier": "org.clothe-match.app",
  "build": {
    "beforeDevCommand": "cd ../frontend && bunx --bun astro dev",
    "devUrl": "http://localhost:4321",
    "beforeBuildCommand": "cd ../frontend && bunx --bun astro build",
    "frontendDist": "../../frontend/dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "clothe_match",
        "width": 800,
        "height": 600
        
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
